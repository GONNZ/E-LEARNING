@model IdentitySample.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edición de usuario</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        Nombre: 
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.nombre)
        </div>
    </div>
    <div class="form-group">
        Apellidos:
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.apellidos, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.apellidos)
        </div>
    </div>

    <div class="form-group">
        Cédula
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.cedula, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="form-group">
        Fecha de nacimiento:
        <div class="col-md-10">
            @Html.EditorFor(m => m.fechaNacimiento, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.fechaNacimiento)
        </div>
    </div>

    <div class="form-group">
        Email:
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="form-group">
        Roles:
        <span class=" col-md-10">
            @foreach (var item in Model.RolesList)
            {
                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
            }
        </span>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-dark" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
